<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhotoGallery.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button
                x:Name="btnUp"
                Clicked="OnBtnUpClicked"
                Text="&#x21E7;" 
                FontSize="Large"
                WidthRequest="300"
                FontFamily="NotoSansSymbols2-Regular.ttf"/>
            
            <Image
                x:Name="imgCnt"
                Aspect="AspectFit"
                HeightRequest="300"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Source="image_0.jpeg"/>

            <Button
                x:Name="btnDown"
                WidthRequest="300"
                Clicked="OnBtnDownClicked"
                Text="&#x21E9;" 
                FontSize="Large"
                FontFamily="NotoSansSymbols2-Regular.ttf"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
